use report;
db.data.createIndex({date: 1}, {unique: true});
db.entries.createIndex({date: 1, employee: 1, customer: 1, project: 1, event: 1}, {unique: false});

db.entries.aggregate([{"$group": {"_id": {"date" : "$date","employee": "$employ
ee", "customer": "$customer", "project": "$project", "event" : "$event"},"count"
 : {"$sum":1}}}, {"$sort" : {"count": -1}}])

